{
  apps : [
    {
      name      : "HelpTerence",
      script    : "server.js",
      env: {
        COMMON_VARIABLE: "true"
      },
      env_production : {
        NODE_ENV: "production"
      }
    }
  ],
  deploy : {
    production : {
      "key"  : "/Users/vnglst/.ssh/id_rsa.pem",
      user : "pi",
      host : "raspberrypi.local",
      ref  : "origin/master",
      repo : "git@github.com:vnglst/HelpTerence.git",
      path : "/var/www/HelpTerence",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
